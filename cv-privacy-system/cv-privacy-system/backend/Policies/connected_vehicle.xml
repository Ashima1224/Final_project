<?xml version="1.0" encoding="UTF-8"?>
<POLICIES xmlns="http://www.w3.org/2002/01/P3Pv1">
  <!-- xmlns:ext="http://uni-stuttgart.de/context-aware-privacy/2026" -->
  
  <POLICY name="openstreetmap-policy" 
          discuri="https://osmfoundation.org/wiki/Privacy_Policy">
    
    <!-- ========== ENTITY INFO ========== -->
    <ENTITY>
      <DATA-GROUP>
        <DATA ref="#business.name">OpenStreetMap</DATA>
        <DATA ref="#business.contact-info.online.email">data@osmfoundation.org</DATA>
      </DATA-GROUP>
    </ENTITY>
    
    <ACCESS><contact-and-other/></ACCESS>
    
    
    <!-- ========== STATEMENT 1: NAVIGATION ========== -->
    <STATEMENT>
      <CONSEQUENCE>
        We provide routing service. Location data processed in real-time, not stored.
      </CONSEQUENCE>
      
      <PURPOSE>
        <current required="yes"/>
      </PURPOSE>
      
      <RECIPIENT>
        <ours/>
      </RECIPIENT>
      
      <RETENTION>
        <no-retention/>
      </RETENTION>
      
      <DATA-GROUP>
          <DATA ref="#route.origin"/>
          <DATA ref="#route.destination"/>
  <!-- OSM: Query only, not stored -->
      </DATA-GROUP>
      
      <EXTENSION>
      <xpref:purpose>Navigation</xpref:purpose>
      <xpref:retention>none</xpref:retention>
      </EXTENSION>

      <!-- EXTENSION: Context requirements
      <ext:CONTEXT-REQUIREMENTS>
        <ext:CONTEXT name="road_type">
          <ext:VALUE>Highway</ext:VALUE>
          <ext:VALUE>Regional</ext:VALUE>
          <ext:VALUE>Residential</ext:VALUE>
        </ext:CONTEXT>
      </ext:CONTEXT-REQUIREMENTS>
      -->
      
    </STATEMENT>
    
    
    <!-- ========== STATEMENT 2: TRAFFIC UPDATES ========== -->
    <STATEMENT>
      <CONSEQUENCE>
        OSM does not provide real-time traffic updates (community contributions only).
      </CONSEQUENCE>
      
      <PURPOSE>
        <current required="opt-in"/>
      </PURPOSE>
      
      <RECIPIENT>
        <ours/>
      </RECIPIENT>
      
      <RETENTION>
        <no-retention/>
      </RETENTION>
      
      <DATA-GROUP>
        <!-- OSM does NOT collect traffic data -->
      </DATA-GROUP>

      <EXTENSION>
      <xpref:purpose>Traffic Detection</xpref:purpose>
      <xpref:retention>none</xpref:retention>
      </EXTENSION>
      
      <!-- NOTE: This statement exists for comparison.
           OSM relies on third-party apps for traffic data. -->
      
    </STATEMENT>
    
    
    <!-- ========== STATEMENT 3: POI RECOMMENDATIONS ========== -->
    <STATEMENT>
      <CONSEQUENCE>
        POI data comes from community contributions (public database). No personalized tracking.
      </CONSEQUENCE>
      
      <PURPOSE>
        <current required="no"/>
      </PURPOSE>
      
      <RECIPIENT>
        <ours/>
        <public/>  <!-- Map data is public -->
      </RECIPIENT>
      
      <RETENTION>
        <stated-purpose>Query processed, not stored</stated-purpose>
      </RETENTION>
      
      <DATA-GROUP>
        <DATA ref="#location.coarse" optional="yes"/>
        <!-- OSM uses coarse location for nearby POI query only -->
      </DATA-GROUP>
      <EXTENSION>
      <xpref:purpose>POI / Nearby Suggestions</xpref:purpose>
      <xpref:retention>session</xpref:retention>
      </EXTENSION>
      <!-- EXTENSION: Context requirements
      <ext:CONTEXT-REQUIREMENTS>
        <ext:CONTEXT name="proximity_to_home">
          <ext:VALUE>&gt;1km</ext:VALUE>
        </ext:CONTEXT>
      </ext:CONTEXT-REQUIREMENTS>
      -->
      
    </STATEMENT>
    
    
    <!-- ========== STATEMENT 4: ROUTE OPTIMIZATION ========== -->
    <STATEMENT>
      <CONSEQUENCE>
        Route calculation performed server-side, no user profile or history stored.
      </CONSEQUENCE>
      
      <PURPOSE>
        <current required="no"/>
      </PURPOSE>
      
      <RECIPIENT>
        <ours/>
      </RECIPIENT>
      
      <RETENTION>
        <no-retention/>
      </RETENTION>
      
      <DATA-GROUP>
          <DATA ref="#route.origin"/>
          <DATA ref="#route.destination"/>
          <!-- Processed for routing calculation, then discarded -->
      </DATA-GROUP>
      <EXTENSION>
      <xpref:purpose>Route Optimization</xpref:purpose>
      <xpref:retention>none</xpref:retention>
      </EXTENSION>

    </STATEMENT>
    
    
    <!-- ========== STATEMENT 5: LOCATION SHARING ========== -->
    <STATEMENT>
      <CONSEQUENCE>
        Location sharing not provided by OSM (third-party apps may offer this feature).
      </CONSEQUENCE>
      
      <PURPOSE>
        <contact required="opt-in"/>
      </PURPOSE>
      
      <RECIPIENT>
        <unrelated/>
      </RECIPIENT>
      
      <RETENTION>
