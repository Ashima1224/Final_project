      </DATA-GROUP>
      
      <EXTENSION>
      <xpref:purpose>Advertising</xpref:purpose>
      <xpref:retention>none</xpref:retention>
      </EXTENSION>


      <!-- NOTE: This statement exists only for comparison purposes.
           Apple does NOT collect location for advertising. -->
      
    </STATEMENT>
    
    
    <!-- ========== STATEMENT 7: LOCATION HISTORY ========== -->
    <STATEMENT>
      <CONSEQUENCE>
        "Significant Locations" stored on-device only with Face ID/Touch ID protection.
      </CONSEQUENCE>
      
      <PURPOSE>
        <tailoring required="opt-in"/>
      </PURPOSE>
      
      <RECIPIENT>
        <ours/>
      </RECIPIENT>
      
      <RETENTION>
        <business-practices>On-device only, encrypted</business-practices>
      </RETENTION>
      
      <DATA-GROUP>
          <DATA ref="#visited.places"/>
          <DATA ref="#timestamp.data"/>
  <!-- Stored on device only, encrypted with hardware protection -->
